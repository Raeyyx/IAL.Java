package base;

public class Aufgabe1 {
    public static void main(String[] args) {
        String str = "Dieses Java Programm funktioniert";
        char[] charArray = str.toCharArray();
        int count = 0;

        for (int i = 0; i < charArray.length; i++) {
            if (charArray[i] == 'a') {
                count++;
            }
        }

        System.out.println("Anzahl des Char 'a': " + count);
    }
}
